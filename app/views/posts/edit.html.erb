<h1>Posts#edit</h1>

<%= form_for @post do |f| %>

<%= f.text_field :title%><br>

<%= f.text_area :body%><br>


<%= f.fields_for :child_comments do |comment_field| %>
  
  <% if comment_field.object.persisted? %>
    <%= comment_field.label :_destroy %>
    <%= comment_field.check_box(:_destroy) %>
  <% end %>  
  <%= comment_field.label :body %>
  <%= comment_field.text_field :body %>

  <% end %>

<%= f.submit %>
<% end %>
